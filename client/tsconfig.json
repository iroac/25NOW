{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"jsx": "react-jsx",
		"target": "es5",
		"allowJs": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"preserveConstEnums": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.spec.ts"]
}
